{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "inlineSourceMap": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      
   },
   "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}